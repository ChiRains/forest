<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.qcloud.project.forest.dao.mysql.mapper.ModularMapper">          
    <select id="list4query" parameterType="java.util.HashMap" resultType="Modular">  
        select * from `forest_modular` limit #{start},#{count}
    </select>  
    
    <select id="count4query" parameterType="java.util.HashMap" resultType="Integer">  
        select count(*) from `forest_modular`
    </select> 
    <select id="getByCode" parameterType="java.util.HashMap" resultType="Modular">  
        select * from `forest_modular` where code=#{code}   limit 1
    </select> 
    
</mapper>