<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.qcloud.component.sellercenter.dao.mysql.mapper.MerchantSpecClassifyMapper">          
    <select id="list4query" parameterType="java.util.HashMap" resultType="MerchantSpecClassify">  
        select * from `sellercenter_merchant_spec_classify` 
        where 1=1
        <if test="merchantId !=0">
        	and `merchantId`=#{merchantId}
        </if>
        limit #{start},#{count}
    </select>  
    
    <select id="count4query" parameterType="java.util.HashMap" resultType="Integer">  
        select count(*) from `sellercenter_merchant_spec_classify`
        where 1=1
        <if test="merchantId !=0">
        	and `merchantId`=#{merchantId}
        </if>
    </select> 
    
    <select id="listByMerchant" parameterType="java.util.HashMap" resultType="MerchantSpecClassify">
    	select * from `sellercenter_merchant_spec_classify` 
        where 1=1
        and `merchantId`=#{merchantId}
    </select>
</mapper>