<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qcloud.component.commoditycenter.dao.mysql.mapper.ClassifySpecificationsMapper">
    <select id="list4query" parameterType="java.util.HashMap" resultType="ClassifySpecifications">
        select * from `commoditycenter_classify_specifications` limit #{start},#{count}
    </select>

    <select id="count4query" parameterType="java.util.HashMap" resultType="Integer">
        select count(*) from `commoditycenter_classify_specifications`
    </select>

    <select id="listByClassify" parameterType="Long" resultType="ClassifySpecifications">
        select * from `commoditycenter_classify_specifications` where `classifyId`=#{classifyId}
    </select>

    <select id="list" resultType="ClassifySpecifications">
        SELECT * FROM commoditycenter_classify_specifications WHERE 1 = 1
        <if test="id != null">
            AND id = #{id}
        </if>
        <if test="classifyId != null">
            AND classifyId = #{classifyId}
        </if>
        <if test="attributeId != null">
            AND attributeId = #{attributeId}
        </if>
        <if test="calculatePrice != null">
            AND calculatePrice = #{calculatePrice}
        </if>
        <if test="order != null">
            ORDER BY ${order}
        </if>
        <if test="start != null and count != null">
            LIMIT #{start},#{count}
        </if>
    </select>
    <select id="count" resultType="int">
        SELECT COUNT(*) FROM commoditycenter_classify_specifications WHERE 1 = 1
        <if test="id != null">
            AND id = #{id}
        </if>
        <if test="classifyId != null">
            AND classifyId = #{classifyId}
        </if>
        <if test="attributeId != null">
            AND attributeId = #{attributeId}
        </if>
        <if test="calculatePrice != null">
            AND calculatePrice = #{calculatePrice}
        </if>
    </select>
</mapper>